{
  "components/epicContent/home-blog": "<div class=\"section-heading\">\n\t<h3 class=\"section-title\"><span>{{lang 'blog.home_page_title'}}</span></h3>\n\t<p class=\"section-subtitle\">{{lang 'blog.home_page_description'}}</p>\n</div>\n<div    class=\"ch-grid\"\n        data-slick='{\n            \"dots\": false,\n            \"arrows\": true,\n            \"infinite\": true,\n            \"slide\": \".js-blog-slide\",\n            \"prevArrow\": \".js-blog-prev-arrow\",\n            \"nextArrow\": \".js-blog-next-arrow\",\n            \"slidesToShow\": 3,\n            \"slidesToScroll\": 1,\n            \"responsive\": [\n                {\n                \"breakpoint\": 992,\n                \"settings\": {\n                    \"slidesToScroll\": 1,\n                    \"slidesToShow\": 2\n                    }\n                },\n                {\n                \"breakpoint\": 767,\n                \"settings\": {\n                    \"slidesToScroll\": 1,\n                    \"slidesToShow\": 1\n                    }\n                }\n                ]\n            }'\n>\n    {{#if blog.recent_posts.length '>' 1}}\n        <button aria-label=\"{{banners.bottom.length }}\" class=\"js-blog-prev-arrow slick-prev slick-arrow\"></button>\n    {{/if}}\n\t{{#each blog.recent_posts}}\n\t    {{> components/blog/post_home  recent_posts=this columns=theme_settings.homepage_blog_posts_count}}\n\t{{/each}}\n    {{#if blog.recent_posts.length '>' 1}}\n        <button aria-label=\"{{banners.bottom.length }}\" class=\"js-blog-next-arrow slick-next slick-arrow\"></button>\n    {{/if}}\n</div>\n<div class=\"more-post text-center\"><a class=\"button\" href=\"{{theme_settings.homepage_blog_posts_button_url}}\">Read More Posts</a></div>\n  \n\n",
  "components/blog/post_home": "\r\n<div class=\"home-blog\">\r\n    <div class=\"homeBlog-img\">\r\n        {{#if recent_posts.thumbnail}}\r\n        <img src=\"{{getImage recent_posts.thumbnail 'defaultImage'}}\" alt=\"{{recent_posts.title}}\">\r\n        {{else}}\r\n            <img src=\"https://via.placeholder.com/300x300?text=Blog\" alt=\"{{recent_posts.title}}\">\r\n        {{/if}}\r\n    </div>\r\n    <div class=\"home-blog-content\">\r\n        <h3>{{recent_posts.title}}</h3>\r\n        <p>{{#if recent_posts.author}}{{lang 'blog.posted_by' name=recent_posts.author}} on {{/if}}{{recent_posts.date_published}}</p>\r\n        <a href=\"{{recent_posts.url}}\">Read More</a>\r\n    </div>\r\n</div>\n"
}
